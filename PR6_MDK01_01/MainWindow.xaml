<Window x:Class="PR6_MDK01_01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR6_MDK01_01"
        mc:Ignorable="d"
        Title="Университет" Icon="\Resources\logotip.png" Height="650" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center" Grid.Row="0" Orientation="Horizontal">
            <Image Source="\Resources\logotip.png"/>
            <TextBlock VerticalAlignment="Center"  Text="Университет" Style="{StaticResource txtHeader}"/>
            <Button Name="btnAuto" Width="100" Height="50" Content="Авторизация" Click="btnAuto_Click"/>
            <Button Name="btnReg" Width="100" Height="50" Content="Регистрация" Click="btnReg_Click"/>
        </StackPanel>
        <Frame NavigationUIVisibility="Hidden" Grid.Row="1" Name="frmMain"/>
    </Grid>
</Window>
