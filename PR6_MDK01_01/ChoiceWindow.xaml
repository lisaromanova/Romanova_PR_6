<Window x:Class="PR6_MDK01_01.ChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR6_MDK01_01"
        mc:Ignorable="d"
        Title="Изменение фото" Height="100" Width="600">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="btnAddNewPhoto" Width="250" Height="40" Margin="5,0,10,0" Template="{StaticResource btnTemplate}" Style="{StaticResource btnStyle}" Content="Добавить новое фото" Click="btnAddNewPhoto_Click"/>
            <Button Name="btnChooseFromGallery" Width="260" Height="40" Margin="5,0,10,0" Template="{StaticResource btnTemplate}" Style="{StaticResource btnStyle}" Content="Выбрать фото из галереи" Click="btnChooseFromGallery_Click"/>
        </StackPanel>
    </Grid>
</Window>
