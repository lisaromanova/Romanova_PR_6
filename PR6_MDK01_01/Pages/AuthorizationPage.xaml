<Page x:Class="PR6_MDK01_01.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR6_MDK01_01.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">
    <Grid >
        <StackPanel VerticalAlignment="Center">
            <TextBlock Style="{StaticResource txtHeader1}" HorizontalAlignment="Center" Text="Авторизация"/>
            <GroupBox FontSize="20" Width="300" Style="{StaticResource gpStyle}" Header="Логин">
                <TextBox Padding="2" Name="tbLogin"/>
            </GroupBox>
            <GroupBox FontSize="20" Width="300" Style="{StaticResource gpStyle}" Header="Пароль">
                <PasswordBox Padding="2" PasswordChar="*" Name="pswPassword"/>
            </GroupBox>
            <Button IsDefault="True" FontSize="20" Margin="0,30,0,0" Name="btnAuto" Style="{StaticResource btnStyle}" Template="{StaticResource btnTemplate}" Width="140" Content="Войти" Click="btnAuto_Click" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>
