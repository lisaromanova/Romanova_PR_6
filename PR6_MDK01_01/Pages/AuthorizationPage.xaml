<Page x:Class="PR6_MDK01_01.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR6_MDK01_01.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthorizationPage">
    <Grid>
        <StackPanel>
            <TextBlock HorizontalAlignment="Center" Text="Авторизация"/>
            <GroupBox Header="Логин">
                <TextBox Name="tbLogin"/>
            </GroupBox>
            <GroupBox Header="Пароль">
                <PasswordBox Name="pswPassword"/>
            </GroupBox>
            <Button Name="btnAuto" Width="100" Content="Войти" Click="btnAuto_Click"/>
        </StackPanel>
    </Grid>
</Page>
