<Page x:Class="PR6_MDK01_01.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR6_MDK01_01.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AdminPage">
    <Grid>
        <StackPanel Grid.RowSpan="2" VerticalAlignment="Center" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="btnView" Width="200" Height="80" Template="{StaticResource btnTemplate}" Style="{StaticResource btnStyle}" Click="btnView_Click" Cursor="Hand"/>
            <Button Name="btnView2" Width="210" Height="80" Template="{StaticResource btnTemplate}" Style="{StaticResource btnStyle}" Click="btnView2_Click" Cursor="Hand"/>
            <Button Name="btnView3" Width="210" Height="80" Template="{StaticResource btnTemplate}" Style="{StaticResource btnStyle}" Click="btnView3_Click" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>
