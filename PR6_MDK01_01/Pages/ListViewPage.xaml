<Page x:Class="PR6_MDK01_01.Pages.ListViewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR6_MDK01_01.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListViewPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="2" HorizontalAlignment="Right" Name="btnAddPlan" Width="230" Height="40" Margin="5,0,10,0" Template="{StaticResource btnTemplate}" Style="{StaticResource btnStyle}" Content="Добавить учебный план" Click="btnAddPlan_Click" Cursor="Hand"/>
        <ListView FontSize="16" HorizontalContentAlignment="Stretch" Name="lstView" Grid.Row="1">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="{Binding GenderColor}" CornerRadius="10" BorderThickness="2" BorderBrush="#FF27578D">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="250"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Margin="10"  Orientation="Horizontal">
                                <Image Name="photoTeacher" Width="150" Source="{Binding PhotoPath}"/>
                                <StackPanel Margin="15,0,0,0">
                                    <TextBlock Text="{Binding Fio}"/>
                                    <TextBlock Text="{Binding Birthday, StringFormat={}dd.MM.yyyy}"/>
                                    <TextBlock Text="{Binding Genders.Gender}"/>
                                    <TextBlock Text="{Binding Departments.Department, StringFormat=Кафедра: {0}}"/>
                                    <TextBlock Text="{Binding LessonsTeacher}"/>
                                    <TextBlock Text="{Binding Salary, StringFormat={}Зарплата за месяц: {0}}"/>
                                </StackPanel>
                            </StackPanel>
                            <Button Uid="{Binding IdTeacher}" Click="btnUpdate_Click" Margin="10" Grid.Column="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Name="btnUpdate" Width="200" Style="{StaticResource btnUpdateStyle}" Content="Изменить занятость"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <TextBlock Name="txtEmpty" Grid.Row="1" Style="{StaticResource txtEmpty}" Text="Записи не найдены"/>
        <Button Grid.Row="2" HorizontalAlignment="Left" Name="btnBack" Width="200" Height="40" Margin="5,0,10,0" Template="{StaticResource btnTemplate}" Style="{StaticResource btnStyle}" Content="Вернуться в меню" Click="btnBack_Click" Cursor="Hand"/>
        <StackPanel Grid.Row="0" >
            <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock  VerticalAlignment="Center"  Text="Кафедра" FontFamily="Calibri" FontSize="16"  Margin="0,0,10,0"/>
                <ComboBox Name="cbDepartment" Width="200" Height="30" IsReadOnly="True" IsEditable="True" Margin="0,0,10,0"  FontFamily="Calibri" FontSize="16" Padding="2" SelectionChanged="cbDepartment_SelectionChanged"/>
                <TextBlock  VerticalAlignment="Center"  Text="ФИО:" FontFamily="Calibri" FontSize="16"  Margin="0,0,10,0"/>
                <TextBox Name="tbFio" Width="200" Height="30" Margin="0,0,10,0"  FontFamily="Calibri" FontSize="16" Padding="2" TextChanged="tbFio_TextChanged"/>
                <CheckBox Name="chbPhoto" VerticalAlignment="Center" FontFamily="Calibri" FontSize="16" Checked="chbPhoto_Checked" Unchecked="chbPhoto_Checked">Только с фото</CheckBox>
            </StackPanel>
            <StackPanel Margin="5" Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock  VerticalAlignment="Center"  Text="Сортировать по параметру:" FontFamily="Calibri" FontSize="16"  Margin="0,0,10,0"/>
                <ComboBox Name="cbParametr" Width="200" Height="30" Padding="2" IsReadOnly="True" IsEditable="True" Margin="0,0,10,0"  FontFamily="Calibri" FontSize="16" SelectionChanged="cbDepartment_SelectionChanged">
                    <ComboBoxItem>Фамилия</ComboBoxItem>
                    <ComboBoxItem>Дата рождения</ComboBoxItem>
                    <ComboBoxItem>Ставка</ComboBoxItem>
                </ComboBox>
                <TextBlock  VerticalAlignment="Center"  Text="в порядке:" FontFamily="Calibri" FontSize="16"  Margin="0,0,10,0"/>
                <ComboBox Name="cbSort" Width="200" Height="30" IsReadOnly="True" IsEditable="True" Margin="0,0,10,0"  FontFamily="Calibri" FontSize="16" Padding="2" SelectionChanged="cbDepartment_SelectionChanged">
                    <ComboBoxItem>По возрастанию</ComboBoxItem>
                    <ComboBoxItem>По убыванию</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
