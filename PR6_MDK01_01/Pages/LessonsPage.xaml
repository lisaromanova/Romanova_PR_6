<Page x:Class="PR6_MDK01_01.Pages.LessonsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR6_MDK01_01.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LessonsPage">
    
    <Grid>
        <StackPanel>
            <TextBlock Text="Проведенные занятия" Style="{StaticResource txtHeader1}"/>
            <ListBox Name="lbLessons">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="0,0,10,0" Text="{Binding DateLesson}"/>
                            <TextBlock Margin="0,0,10,0" Text="{Binding Groups.NameGroup}"/>
                            <TextBlock Margin="0,0,10,0" Text="{Binding Disciplines.Discipline}"/>
                            <TextBlock Margin="0,0,10,0" Text="{Binding TypesOfLesson.TypeOfLesson}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Page>
